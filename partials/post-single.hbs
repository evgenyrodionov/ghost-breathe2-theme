<article class="{{post_class}}">
  <header class="post-header">
    <h1 class="post-title {{#if featured}}post-featured{{/if}}">
      {{^is "page"}}
        <a href="{{url}}" class="permalink">{{title}}</a>
      {{/is}}
      {{#is "page"}}
        {{title}}
      {{/is}}
    </h1>
    {{^is "page"}}
      <time class="post-time" datetime="{{date format='YYYY-MM-DD'}}">
        {{date format='DD.MM.YYYY'}}
      </time>
    {{/is}}
  </header>

  <div class="post-content">
    {{content}}
  </div>

  {{^is "home, page"}}
    <hr>
    <footer class="post-footer">
      <nav class="post-nav">
        {{#prev_post}}<span class="post-nav-item prev"><a href="{{url}}">{{title}}</a></span>{{/prev_post}}
        {{#next_post}}<span class="post-nav-item next"><a href="{{url}}">{{title}}</a></span>{{/next_post}}
      </nav>
    </footer>
    <hr>
    <div id="disqus_thread"></div>
  {{/is}}
</article>
